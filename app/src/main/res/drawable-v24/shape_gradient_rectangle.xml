<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#E62439"
                android:endColor="#8E0D56"
                android:angle="270" />

            <corners
                android:topLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >

        <shape>
            <gradient
                android:startColor="#E62439"
                android:endColor="#8E0D56"
                android:angle="270" />
            <!--  <stroke
                 android:width="1dp"
                 android:color="#bb00ff00" /> -->
            <corners
                android:topLeftRadius="@dimen/dimen_10"
                android:bottomRightRadius="@dimen/dimen_10"
                android:topRightRadius="@dimen/dimen_10"
                android:bottomLeftRadius="@dimen/dimen_10" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>
